@model List<VidlyAPI.Models.Movie>

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<input type="button" class="btn btn-primary" value="New Movie" onclick="location.href='@Url.Action("New","Movies")'" />
<br /><br />

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genere</th>
            <th>Stock Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", "Movies", new { id = movie.Id }, htmlAttributes: null)</td>
                <td>@movie.Genere.Name</td>
                <td>@movie.NumberinStock</td>
            </tr>
        }
    </tbody>
</table>

