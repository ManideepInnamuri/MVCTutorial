@model List<VidlyAPI.Models.Movie>

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<input type="button" class="btn btn-primary" value="New Movie" onclick="location.href='@Url.Action("New","Movies")'" />
<br /><br />

<table id="movies" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genere</th>
            <th>Stock Count</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
                <td>@movie.Genere.Name</td>
                <td>@movie.NumberinStock</td>
                <td>
                    <button class="btn btn-success glyphicon glyphicon-edit" onclick="location.href='@Url.Action("Edit", "Movies", new {id = movie.Id})';return false;"></button>
                    <button data-movie-id="@movie.Id" class="btn btn-danger glyphicon glyphicon-remove js-delete"></button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/ApplicationScripts/Movie.js"></script>