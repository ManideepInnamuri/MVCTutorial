@model List<VidlyAPI.Models.Customer>
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var serviceUrl = @System.Web.Configuration.WebConfigurationManager.AppSettings["MoviesAPI"];
}

<h2> Customers</h2>
<input type="button" class="btn btn-primary" value="New Customer" onclick="location.href='@Url.Action("New","Customers")'" />
<br /><br />
<table id="customers" class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
            <th>Discount Rate</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
        <tr>
            <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, htmlAttributes: null)</td>
            <td>@customer.MembershipType.Membership</td>
            <td>@customer.MembershipType.DiscountRate%</td>
            <td><button data-customer-id="@customer.Id" class="btn btn-warning js-delete">Delete</button></td>            
        </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
           
            $("#customers .js-delete").on("click", function () {
                var button = $(this);
                var apiUrl = '@System.Web.Configuration.WebConfigurationManager.AppSettings["MoviesAPI"]/api/customers/' + button.attr("data-customer-id")
                if (confirm("Are you sure you want to delete this Customer")){
                    $.ajax({
                        url: apiUrl,
                        method: "DELETE",
                        success: function () {
                            button.parents("tr").remove();
                            console.log("Success");
                        }
                    });
                }
            });
        });
    </script>
}